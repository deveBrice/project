{% extends 'base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('bundles/app/bootstrap/bootstrap-3.3.7-dist/bootstrap-3.3.7-dist/css/bootstrap.min.css') }}" />
<script src="{{ asset('bundles/app/bootstrap/bootstrap-3.3.7-dist/bootstrap-3.3.7-dist/js/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/app/bootstrap/bootstrap-3.3.7-dist/bootstrap-3.3.7-dist/js/bootstrap.min.js') }}"></script>
    <h1>Liste des Etudiants</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Numéro d'étudiant</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.firstName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.numEtud }}</td>
                <td><a href="{{ path('students_update', { 'id': student.id }) }}">Modifier</a></td>
                <td><a href="{{ path('students_delete', { 'id': student.id }) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('students_add') }}">Ajouter un etudiant(e)</a>
        </li>
    </ul>
{% endblock %}
